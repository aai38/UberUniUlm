<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:background="@color/black_semitransparent">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/chatItemUserImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/start_register_profile_photo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:id="@+id/chatItemTitle"
        android:layout_toRightOf="@id/chatItemUserImage"
        android:layout_toEndOf="@id/chatItemUserImage"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"/>

</RelativeLayout>